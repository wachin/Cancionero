{
  "settings": {
    "columns": 2              // dos columnas
  },
  "pdf": {
    "papersize": "a4",        // tamaño A4
    "columnspace": 20,        // espacio entre columnas (pt)
    "fonts": {
      "text":  "monospace 11",       // letra (monoespaciada)
      "chord": "monospace bold 11",  // acordes (monoespaciada en negrita)
      "title": "sans bold 14",
      "subtitle": "sans 11",
      "toc": "sans 10"
    }
  },
  "contents": [
    {
      "label": "Índice",
      "fields": ["title"],
      "line": "%{title}",
      "pageno": "%{page}",
      "template": "stdtoc",
      "omit": false
    }
  ]
}
